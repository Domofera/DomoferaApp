<% @terminals.each do |terminal| %>
<h4>Terminal: <%= terminal.name %></h4>
<div class="row">
  <div class="col-md-4">
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Temperatura del suelo</th>
          <th>Valor</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Mínima</td>
          <td><%= terminal.days.last.temperature_floor_min %></td>
        </tr>
        <tr>
          <td>Máxima</td>
          <td><%= terminal.days.last.temperature_floor_max %></td>
        </tr>
        <tr>
          <td>Media</td>
          <td><%= terminal.days.last.temperature_floor_average %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

