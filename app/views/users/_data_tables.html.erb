      <tr>
        <td>Mínima</td>
        <td><%= terminal.days.last.humidity_floor_min %></td>
      </tr>
      <tr>
        <td>Máxima</td>
        <td><%= terminal.days.last.humidity_floor_max %></td>
      </tr>
      <tr>
        <td>Media</td>
        <td><%= terminal.days.last.humidity_floor_average %></td>
