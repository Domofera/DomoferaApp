<%= stylesheet_link_tag "compiled/fullcalendar", media: "all", "data-turbolinks-track" => true %>
<%= javascript_include_tag "compiled/calendar", "data-turbolinks-track" => true %>
<div id="page-content-wrapper">
  <div class="container-fluid">
    <div class="row">
      <h1>Principal</h1>
      <h4>Datos Meteorológicos para la ciudad de
        <span id="city-name"><%= current_user.city %></span>:
        <span id="description"></span>
      </h4>
      <!--  Panel de temperatura -->
      <div class="col-lg-3">
        <div class="panel panel-data">
          <div class="panel-heading">
            <i id="icon"></i><p>Temperatura</p>
          </div>
          <div class="panel-body">
            <h2 id="temperature"></h2>
          </div>
        </div>
      </div>
      <!--  Panel de Humedad -->
      <div class="col-lg-3">
        <div class="panel panel-data centered">
          <div class="panel-heading">
            <i class="icon flaticon-water3"></i><p>Humedad</p>
          </div>
          <div class="panel-body">
            <h2 id="humidity"></h2>
          </div>
        </div>
      </div>
      <!-- Panel de Presión Atmosférica -->
      <div class="col-lg-3">
        <div class="panel panel-data">
          <div class="panel-heading">
            <i class="icon flaticon-barometer"></i><p>Presión Atmosférica</p>
          </div>
          <div class="panel-body">
            <h2 id="pressure"></h2>
          </div>
        </div>
      </div>
      <!-- Panel de Viento -->
      <div class="col-lg-3">
        <div class="panel panel-data">
          <div class="panel-heading">
            <i class="icon flaticon-winds2"></i><p>Viento</p>
          </div>
          <div class="panel-body">
            <h2 id="wind"></h2>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <h3> Tareas </h3>
      <%= render "todos/form_new_todo" %>
      <%= render "todos/list_todos" %>
    </div>
      <i class="icon flaticon-right226" id="menu-toggle"></i>
  </div>
  <div class="container-fluid">
    <div id="calendar"></div>
</div>
