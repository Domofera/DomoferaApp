<div class="row">
    <%= form_for @current_user, inline_errors: false, :class => 'form-control' do |f| %>
        <div class="col-md-6">
          <h4>Puedes cambiar tus datos:</h4>
          <label>Nombre de usuario:</label>
          <%= f.text_field :username, :class => 'form-control', :value => @current_user.username %>
          <label>Email:</label>
          <%= f.text_field :email, :class => 'form-control', :value => @current_user.email %>
          <label>Ciudad:</label>
          <%= f.text_field :city, :class => 'form-control', :value => @current_user.city %>
          <label>País:</label>
          <%= f.text_field :country, :class => 'form-control', :value => @current_user.country %>
          <br>
          <%= f.submit "Enviar datos", :class => 'btn btn-success' %>
        </div>
        <div class="col-md-6">
          <h4>También puedes cambiar tu contraseña:</h4>
          <label>Nueva contraseña:</label>
          <%= f.password_field :password, :class => 'form-control' %>
          <label>Confirmación de la contraseña:</label>
          <%= f.password_field :password_confirmation, :class => 'form-control'  %>
          <br>
          <%= f.submit "Enviar datos", :class => 'btn btn-success' %>
        <% end %>
    </div>
</div>
