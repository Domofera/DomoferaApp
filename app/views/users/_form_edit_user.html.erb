<%= form_for @current_user, inline_errors: false, :class => 'form-signin' do |f| %>
<div class="col-md-6">
      <h3>Puedes cambiar tus datos:</h3>
      <%= f.text_field :username, :class => 'form-control' %>
      <%= f.text_field :email, :class => 'form-control'  %>
      <%= f.text_field :city, :class => 'form-control' %>
      <%= f.text_field :country, :class => 'form-control'%>
      <%= f.submit "Enviar datos", :class => 'btn btn-lg btn-block' %>
    </div>
    <div class="col-md-6">
      <h3>También puedes cambiar tu contraseña:</h3>
      <%= f.password_field :password, :class => 'form-control', :placeholder => 'Nueva Contraseña' %>
      <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'Repetir Contraseña'  %>
      <%= f.submit "Enviar datos", :class => 'btn btn-lg btn-block' %>
    <% end %>
  </div>
