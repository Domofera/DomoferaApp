  <div id="page-content-wrapper">
    <div class="container-fluid">
      <h2>Terminales</h2>
        <p class="orange" id="new-terminal">Nuevo Terminal</p>
        <div class="row" id="new-terminal-form">
          <%= render "form_new_terminal" %>
        </div>
      <div class="row">
        <% @terminals.each_with_index do |terminal, index| %>
          <div class="col-lg-6">
            <div class="panel panel-data centered">
              <div class="panel-heading">
                <i class="icon flaticon-wifi20"></i>
                <%= terminal.name %>
                <button type="button" class="close">
                  <span aria-hidden="true">x</span>
                </button>
              </div>
              <div class="panel-body terminals">
                <h5>Descripción: <%= terminal.description %></h5>
                <h5>Código: <%= terminal.password %></h5>
                <h5>Datos:</h5>
                <ul>
                  <li>username: <%= current_user.username %></li>
                  <li>id: <%= terminal.id %></li>
                  <li>password: <%= terminal.password %></li>
                  <li>day:
                </ul>
              </div>
          </div>
        </div>
        <% end %>
      </div>
        <i class="icon flaticon-right226" id="menu-toggle"></i>
    </div>
  </div>
</div>
